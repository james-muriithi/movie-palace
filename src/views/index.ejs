<!-- home -->
<section class="home">
    <div class="container">
        <!-- content tabs -->
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active">
                <div class="row">
                    <!-- card -->
                    <% for(var i=0; i<data.length; i++) { %>
                        <% if (typeof  data[i] == 'undefined') { %>
                            <% continue %>
                                <% } %>
                                    <%var url %>
                                    <%var title %>
                                        <% title = data[i].media_type == 'tv' ? data[i].name : data[i].title %> 
                                        <% url = '/movie/'+ data[i].id + '&title=' + title %>
                                            <% if (data[i].media_type == 'tv') { %>
                                                <% url='/tv/' + data[i].id %>
                                                    <% } %>
                                                        <div class="col-6 col-sm-12 col-lg-6">
                                                            <div class="card card--list">
                                                                <div class="row">
                                                                    <div class="col-12 col-sm-4">
                                                                        <div class="card__cover">
                                                                            <% if (data[i].poster_path) { %>

                                                                                <a href="<%- url %>" data-href="https://image.tmdb.org/t/p/w200<%- data[i].poster_path %>" class="boxout1 progressive replace">
                                                                                    <img src="https://ucarecdn.com/dc3dad83-e7b5-44cd-841a-dbf4000005d6/-/resize/150x200/-/quality/lightest/party.jpg" class="preview" alt="party" />
                                                                                </a>
                                                                                <% } else { %>
                                                                                    <a href="<%- url %>" data-href="/img/covers/posterplaceholder.jpg" class="boxout1 progressive replace">
                                                                                        <img src="https://ucarecdn.com/dc3dad83-e7b5-44cd-841a-dbf4000005d6/-/resize/150x200/-/quality/lightest/party.jpg" class="preview" alt="party" />
                                                                                    </a>
                                                                                    <% } %>
                                                                                        <a href="<%- url %>" class="card__play" aria-label="play icon">
                                                                                            <i class="icon ion-ios-play"></i>
                                                                                        </a>
                                                                        </div>
                                                                    </div>

                                                                    <div class="col-12 col-sm-8">
                                                                        <div class="card__content">
                                                                            <a href="<%- url %>">
                                                                                <h3 class="card__title">
                                                                                    <%= title %> 
                                                                                </h3>
                                                                            </a>
                                                                            <span class="card__category">
                                                <a href="#"><%- data[i].genre_ids.toString().split(',').join(', ') %></a>
                                            </span>

                                                                            <div class="card__wrap">
                                                                                <span class="card__rate">
                                                    <% function numberWithCommas(x) {
                                                        return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                                                    } %> 
                                                    <i class="icon ion-ios-star"></i><%- data[i].vote_average %> 
                                                    <span class="total_votes pl-3"> <span> / </span>
                                                                                <%- " "+numberWithCommas(data[i].vote_count)+" " %> <span> Votes </span></span>

                                                                                    </span>

                                                                                    <ul class="card__list">
                                                                                        <% if (data[i].release_date) { %>
                                                                                            <li>
                                                                                                Release Date:
                                                                                                <%= data[i].release_date %>
                                                                                            </li>
                                                                                            <% } %>
                                                                                                <li class="grid-share-btn" style="border-radius: 50%; padding: 10px; cursor: pointer;" data-title="<%- data[i].name || data[i].title || '' %> " data-url="<%- url %>" data-rating="<%- data[i].vote_average %>" data-overview="<%- data[i].overview %>">
                                                                                                    <svg version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="20px" height="20px" viewBox="0 0 300 300" xml:space="preserve">
                                                                                                <g id="XMLID_3_">
                                                                                                    <path id="XMLID_239_" d="M105.875,150c0,1.025-0.231,1.985-0.293,3.011l107.486,53.744c9.213-7.797,20.98-12.663,33.984-12.663
                                                                                                        c29.244,0,52.947,23.698,52.947,52.946C300,276.302,276.297,300,247.053,300c-29.264,0-52.929-23.698-52.929-52.962
                                                                                                        c0-1.059,0.228-2.002,0.293-3.032L86.928,190.283c-9.24,7.764-20.978,12.63-33.982,12.63C23.699,202.913,0,179.231,0,150
                                                                                                        c0-29.262,23.699-52.962,52.945-52.962c13.005,0,24.754,4.883,33.982,12.646l107.489-53.726c-0.065-1.025-0.293-1.987-0.293-3.046
                                                                                                        C194.124,23.7,217.789,0,247.053,0C276.297,0,300,23.7,300,52.913c0,29.267-23.703,52.963-52.947,52.963
                                                                                                        c-13.037,0-24.787-4.886-33.984-12.68l-107.486,53.763C105.644,147.984,105.875,148.942,105.875,150L105.875,150z M105.875,150" fill="#ff55a5" />
                                                                                                </g>
                                                                                                
                                                                                                </svg>
                                                                                                </li>

                                                                                    </ul>

                                                                            </div>

                                                                            <div class="card__description">
                                                                                <p>
                                                                                    <%- data[i].overview %>
                                                                                </p>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <% } %>

                                                            <!-- end card -->
                </div>
                <div class="col-12 d-none">
                    <ul class="paginator paginator--list" id="pagination">
                        <li class="paginator__item paginator__item--prev">
                            <a href="#" aria-label="back arrow"><i class="icon ion-ios-arrow-back"></i></a>
                        </li>
                        <li class="paginator__item paginator__item--active"><a href="#">1</a></li>
                        <li class="paginator__item"><a href="#">2</a></li>
                        <li class="paginator__item"><a href="#">3</a></li>
                        <li class="paginator__item"><a href="#">4</a></li>
                        <li class="paginator__item paginator__item--next">
                            <a href="#" aria-label="forwad arrow"><i class="icon ion-ios-arrow-forward"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- end content tabs -->
    </div>
</section>
<!-- end home -->